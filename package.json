{
  "name": "polar",
  "version": "0.1.0",
  "private": true,
  "description": "Polar runtime bootstrap workspace",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "check:boundaries": "node scripts/check-workspace-boundaries.mjs",
    "export:artifacts": "node scripts/export-artifacts.mjs",
    "test": "node --test tests/**/*.test.mjs",
    "check": "npm run check:boundaries && npm test",
    "dev:ui": "npm run dev --workspace=polar-web-ui",
    "dev:bot": "npm run start --workspace=@polar/bot-runner",
    "dev:automation": "npm run start:automation --workspace=@polar/bot-runner",
    "dev": "concurrently -n \"UI,BOT\" -c \"cyan,magenta\" \"npm run dev:ui\" \"npm run dev:bot\""
  },
  "overrides": {
    "rimraf": "npm:rimraf@6.1.2",
    "gaxios": {
      "rimraf": "npm:rimraf@6.1.2"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2"
  }
}
